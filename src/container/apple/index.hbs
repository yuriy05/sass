<div class="page">
  <div class="section header">
    {{#with header}}
    <header class="header__content">
      <div class="header__block">
        <img src="/svg/apple.svg" alt="Apple logo" class="header__icon">
        <nav class="header__block">
          {{#each links}}
          <a href="{{url}}" class="header__link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header__block">
        <img src="/svg/search.svg" alt="search icon" class="header__icon">
        <img src="/svg/profile.svg" alt="profile icon" class="header__icon">
      </div>
    </header>
  </div>

  <div class="add">
    {{#with ad}}
      <div class="add__content">
        <h2 class="add__title">{{title}}</h2>
        {{#with link}}
        <a href="{{url}}" class="add__link">{{text}}</a>
        {{/with}}
      </div>
    {{/with}}
  </div>
{{/with}}


